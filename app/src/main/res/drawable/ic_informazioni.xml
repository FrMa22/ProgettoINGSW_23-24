<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Cerchio esterno -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:color="@color/colore_secondario"
                android:width="2dp"/> <!-- Imposta lo spessore del contorno desiderato -->
        </shape>
    </item>

    <!-- Icona principale -->
    <item android:drawable="@drawable/ic_info" android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp"/>
</layer-list>
