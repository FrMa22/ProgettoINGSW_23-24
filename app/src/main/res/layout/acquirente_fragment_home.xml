<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colore_base"
    tools:context=".gui.acquirente.AcquirenteFragmentHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colore_base"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/design_toolbar">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="20dp"
                        android:text="Home"
                        android:textColor="@color/colore_secondario"
                        android:textSize="50sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/openPreferiti"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginRight="20dp"
                        android:backgroundTint="@android:color/transparent"
                        android:contentDescription="Clicca per aprire i preferiti."
                        android:drawableTint="@android:color/transparent"
                        android:src="@drawable/ic_preferiti_non_riempita" />
                </androidx.appcompat.widget.Toolbar>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_le_mie_aste"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/colore_base"
                    android:text="Le mie aste"
                    android:textColor="@color/colore_secondario"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:strokeColor="#AAAAAA"
                    app:strokeWidth="2dp" />

                <LinearLayout
                    android:id="@+id/layout_asta_inversa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/design_bio_personale"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_nome_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="center"
                        android:background="@drawable/bordi_trasparenti"
                        android:textColor="@color/colore_secondario"
                        android:textSize="20sp" />
                    <ImageView
                        android:id="@+id/image_view_item"
                        android:layout_width="160dp"
                        android:layout_height="180dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/design_bio_personale" />
                    <TextView
                        android:id="@+id/textView_descrizione_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:background="@drawable/bordo_sotto_grigio"
                        android:textColor="@color/colore_secondario"
                        android:textSize="20sp" />


                        <TextView
                            android:id="@+id/textView_data_scadenza_item"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:gravity="center"
                            android:background="@drawable/bordo_sotto_grigio"
                            android:textColor="@color/colore_secondario"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/textView_prezzo_item"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:background="@drawable/bordi_trasparenti"
                            android:textColor="@color/colore_secondario"
                            android:textSize="16sp"/>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:drawableRight="@drawable/ic_freccia_piccola_dx"
                    android:drawablePadding="30dp"
                    android:gravity="center_vertical"
                    android:text="Consigliati per te"
                    android:textColor="@color/colore_secondario"
                    android:textSize="25sp"
                    android:textStyle="bold" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_prodotti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:drawableRight="@drawable/ic_freccia_piccola_dx"
                    android:drawablePadding="30dp"
                    android:gravity="center_vertical"
                    android:text="Offerte in scadenza"
                    android:textColor="@color/colore_secondario"
                    android:textSize="25sp"
                    android:textStyle="bold" />


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="260dp"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/home_item_design"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="160dp"
                                android:layout_height="180dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="10dp"
                                android:background="@drawable/home_item_design">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:contentDescription="Immagine"
                                    android:src="@drawable/img_default" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="-5dp"
                                android:text="Albero di natale"
                                android:textColor="@color/colore_secondario"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:text="40€"
                                android:textColor="@color/colore_secondario"
                                android:textSize="20sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="260dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/home_item_design"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="160dp"
                                android:layout_height="180dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="10dp"
                                android:background="@drawable/home_item_design">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="20dp"
                                    android:layout_marginBottom="20dp"
                                    android:contentDescription="Immagine"
                                    android:src="@drawable/prova_home_lavatrice" />
                            </RelativeLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="-5dp"
                                android:text="Lavatrice"
                                android:textColor="@color/colore_secondario"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:text="200€"
                                android:textColor="@color/colore_secondario"
                                android:textSize="20sp" />


                        </LinearLayout>


                    </LinearLayout>


                </HorizontalScrollView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:drawableRight="@drawable/ic_freccia_piccola_dx"
                    android:drawablePadding="30dp"
                    android:gravity="center_vertical"
                    android:text="Nuove proposte"
                    android:textColor="@color/colore_secondario"
                    android:textSize="25sp"
                    android:textStyle="bold" />


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="260dp"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/home_item_design"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="160dp"
                                android:layout_height="180dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="10dp"
                                android:background="@drawable/home_item_design">

                                <ImageView
                                    android:layout_width="250dp"
                                    android:layout_height="170dp"
                                    android:layout_margin="10dp"
                                    android:contentDescription="Immagine"
                                    android:src="@drawable/sfondoprova" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="-5dp"
                                android:maxLines="2"
                                android:text="Varie info sul prodottooooooooooooooooooo"
                                android:textColor="@color/colore_secondario"
                                android:textSize="20sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="260dp"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/home_item_design"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="160dp"
                                android:layout_height="180dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="10dp"
                                android:background="@drawable/home_item_design">

                                <ImageView
                                    android:layout_width="250dp"
                                    android:layout_height="170dp"
                                    android:layout_margin="10dp"
                                    android:contentDescription="Immagine"
                                    android:src="@drawable/sfondoprova" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="-5dp"
                                android:maxLines="2"
                                android:text="Varie info sul prodottooooooooooooooooooo"
                                android:textColor="@color/colore_secondario"
                                android:textSize="20sp" />


                        </LinearLayout>


                    </LinearLayout>


                </HorizontalScrollView>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</LinearLayout>