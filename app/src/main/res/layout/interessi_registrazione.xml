<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/interessi_registrazione_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".InteressiRegistrazione">

    <TextView
        android:id="@+id/textViewRaccontaciDeiTuoiInteressi"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#00F0FF"
        android:gravity="center"
        android:text="Raccontaci dei tuoi interessi selezionando tra le seguenti categorie"
        android:textSize="22dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <CheckBox
            android:id="@+id/bottoneArte"
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layoutDirection="rtl"
            android:backgroundTint="#00F0FF"
            android:text="Arte"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_arte"/>

        <CheckBox
            android:id="@+id/bottoneElettrodomestici"
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layoutDirection="rtl"
            android:layout_gravity="center"
            android:backgroundTint="#00F0FF"
            android:text="Elettrodomestici"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_elettrodomestici"/>


        <CheckBox
            android:id="@+id/bottoneAutomobili"
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layoutDirection="rtl"
            android:layout_gravity="center"
            android:backgroundTint="#00F0FF"
            android:text="Automobili"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_car"/>

        <CheckBox
            android:id="@+id/bottoneMoto"
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layoutDirection="rtl"
            android:layout_gravity="center"
            android:backgroundTint="#00F0FF"
            android:text="Moto"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_motorcycle"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottoneAutoEpoca"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="fill"
            android:backgroundTint="#00F0FF"
            android:text="Auto d'epoca"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottoneMotoEpoca"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="fill"
            android:backgroundTint="#00F0FF"
            android:text="Moto d'epoca"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottoneTelefonia"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="fill"
            android:backgroundTint="#00F0FF"
            android:text="Telefonia"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottoneComputer"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="fill"
            android:backgroundTint="#00F0FF"
            android:text="Computer"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottoneMusica"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="fill"
            android:backgroundTint="#00F0FF"
            android:text="Musica"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottoneLibri"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="fill"
            android:backgroundTint="#00F0FF"
            android:text="Libri"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottoneArredamentoCasa"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="fill"
            android:backgroundTint="#00F0FF"
            android:text="Arredamento casa"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottoneFumetti"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="fill"
            android:backgroundTint="#00F0FF"
            android:text="Fumetti"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottoneEsterniCasa"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="fill"
            android:backgroundTint="#00F0FF"
            android:text="Esterni casa"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottoneSport"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="fill"
            android:backgroundTint="#00F0FF"
            android:text="Sport"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottoneVestiario"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="fill"
            android:backgroundTint="#00F0FF"
            android:text="Vestiario"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottoneGioielli"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="fill"
            android:backgroundTint="#00F0FF"
            android:text="Gioielli e Accessori"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottoneGiocattoli"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="fill"
            android:backgroundTint="#00F0FF"
            android:text="Giocattoli"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottoneFotografia"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="fill"
            android:backgroundTint="#00F0FF"
            android:text="Fotografia"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#00F0FF">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottoneProseguiInteressiRegistrazione"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/white"
            android:text="Prosegui"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>


</LinearLayout>
