<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_asta_inglese"
    android:layout_width="175dp"
    android:layout_height="250dp"
    android:layout_margin="15dp">


    <LinearLayout
        android:id="@+id/linear_layout_scadenza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:elevation="10dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_view_tipo_asta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="center"
            android:text="Asta All'inglese"
            android:textColor="@color/colore_item_asta_inglese"
            android:textSize="12dp"
            tools:ignore="TextSizeCheck" />
        />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_immagine"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:elevation="1dp">


        <ImageView
            android:id="@+id/image_view_item_asta_inglese"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/relative_layout_immagine">



        <TextView
            android:id="@+id/textView_nome_item_asta_inglese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:maxLines="2"
            android:gravity="center"
            android:text="Nome asta"
            android:textColor="@color/colore_secondario"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/textView_descrizione_item_asta_inglese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_nome_item_asta_inglese"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="center"
            android:lines="2"
            android:text="descrizione asta "
            android:textColor="@color/colore_secondario"
            android:textSize="14dp"
            tools:ignore="TextSizeCheck"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_intervallo_scadenza"
            android:layout_below="@id/linear_layout_prezzo"
            android:text="Scadenza in:"
            android:fontFamily="sans-serif-thin"
            android:textSize="14dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/textView_intervallo_offerte_item_asta_inglese"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="01:00"
            android:textColor="@color/colore_secondario"
            android:textSize="16dp"
            android:layout_below="@id/text_view_intervallo_scadenza" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear_layout_prezzo"
            android:layout_below="@id/textView_nome_item_asta_inglese"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView_prezzo_item_asta_inglese"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="100â‚¬"
                android:textColor="@color/colore_item_asta_inglese"
                android:textSize="22dp"
                android:textStyle="bold" />


        </LinearLayout>


        <TextView
            android:id="@+id/textView_rialzo_item_asta_inglese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bordi_trasparenti"
            android:gravity="center"
            android:textColor="@color/colore_secondario"
            android:textSize="16dp"
            android:visibility="gone" />
    </RelativeLayout>


</RelativeLayout>