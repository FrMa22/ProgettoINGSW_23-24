<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_asta_inglese"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_margin="20dp"
    android:background="@drawable/design_bio_personale"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asta All'inglese"
        android:textSize="20dp"
        android:textColor="@color/colore_secondario"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        />
    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:background="@drawable/design_bio_personale"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        >

        <ImageView
            android:id="@+id/image_view_item_asta_inglese"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="10dp"
        android:text="nome:"
        android:textColor="@color/colore_hint"
        android:textSize="12dp"
        tools:ignore="TextSizeCheck" />
    <TextView
        android:id="@+id/textView_nome_item_asta_inglese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:background="@drawable/bordi_trasparenti"
        android:textColor="@color/colore_secondario"
        android:textSize="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="10dp"
        android:text="descrizione:"
        android:textColor="@color/colore_hint"
        android:textSize="12dp"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/textView_descrizione_item_asta_inglese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bordo_sotto_grigio"
        android:gravity="center"
        android:hint="Assente"
        android:textColor="@color/colore_secondario"
        android:textSize="14dp"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="10dp"
        android:text="intervallo offerte:"
        android:textColor="@color/colore_hint"
        android:textSize="12dp"
        tools:ignore="TextSizeCheck" />
    <TextView
        android:id="@+id/textView_intervallo_offerte_item_asta_inglese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:background="@drawable/bordo_sotto_grigio"
        android:textColor="@color/colore_secondario"
        android:textSize="18dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="10dp"
        android:text="prezzo attuale:"
        android:textColor="@color/colore_hint"
        android:textSize="12dp"
        tools:ignore="TextSizeCheck" />
    <TextView
        android:id="@+id/textView_prezzo_item_asta_inglese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:background="@drawable/bordo_sotto_grigio"
        android:textColor="@color/colore_secondario"
        android:textSize="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="10dp"
        android:text="rialzo minimo:"
        android:textColor="@color/colore_hint"
        android:textSize="12dp"
        tools:ignore="TextSizeCheck" />
    <TextView
        android:id="@+id/textView_rialzo_item_asta_inglese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:background="@drawable/bordi_trasparenti"
        android:textColor="@color/colore_secondario"
        android:textSize="16dp"/>


</LinearLayout>