<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutRegistrazione"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colore_base"
    tools:context=".gui.Registrazione"
    android:orientation="vertical">



    <TextView
        android:id="@+id/textViewCompilazione"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="Compilare i seguenti campi"
        android:textColor="@color/colore_secondario"
        android:textSize="28sp"
        android:textStyle="bold"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colore_secondario"
        android:layout_gravity="center"
        android:layout_marginTop="-1dp"
        android:layout_marginBottom="40dp"/>

    <EditText
        android:id="@+id/editTextNomeRegistrazione"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/edit_text_top_corners_rounded_grigi"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:gravity="center_vertical"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:singleLine="true"
        android:maxLength="50"
        android:hint="Nome" />

    <View
        android:layout_width="320dp"
        android:layout_height="3dp"
        android:background="#AAAAAA"
        android:layout_gravity="center"
        android:layout_marginTop="-1dp"/>
    <EditText
        android:id="@+id/editTextCongnomeRegistrazione"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/edit_text_lati_grigi"
        android:hint="Cognome"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:gravity="center_vertical"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="-2dp"
        android:maxLength="50"
        android:singleLine="true"/>
    <View
        android:layout_width="320dp"
        android:layout_height="3dp"
        android:background="#AAAAAA"
        android:layout_gravity="center"
        android:layout_marginTop="-1dp"/>
    <EditText
        android:id="@+id/editTextEmailRegistrazione"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/edit_text_lati_grigi"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:gravity="center_vertical"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="-2dp"
        android:hint="Indirizzo Email"
        android:maxLength="100"
        android:singleLine="true" />

    <View
        android:layout_width="320dp"
        android:layout_height="3dp"
        android:background="#AAAAAA"
        android:layout_gravity="center"
        android:layout_marginTop="-1dp"/>
    <EditText
        android:id="@+id/editTextPasswordRegistrazione"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/edit_text_lati_grigi"
        android:hint="Password"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:inputType="textPassword"
        android:gravity="center_vertical"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="-2dp"
        android:maxLength="100"
        android:singleLine="true"/>
    <View
        android:layout_width="320dp"
        android:layout_height="3dp"
        android:background="#AAAAAA"
        android:layout_gravity="center"
        android:layout_marginTop="-1dp"/>
    <EditText
        android:id="@+id/editTextConfermaPasswordRegistrazione"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/edit_text_bottom_corners_rounded_grigi"
        android:hint="Conferma password"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:inputType="textPassword"
        android:gravity="center_vertical"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="-2dp"
        android:maxLength="100"
        android:singleLine="true"/>
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_mostra_password_registrazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostra password"
        android:textColor="@color/colore_secondario"
        android:layout_gravity="end"
        android:layout_marginEnd="30dp"
        />
    <TextView
        android:id="@+id/textViewTipologiaUtente"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/editTextConfermaPasswordRegistrazione"
        android:gravity="center"
        android:text="Che tipologia di utente sei?"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="0dp"/>

    <Spinner
        android:id="@+id/spinnerRegistrazione"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/spinner_background"
        android:entries="@array/tipoUtente"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="25sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottoneAnnulla"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/colore_secondario"
            android:text="Annulla"
            android:textColor="@color/colore_base"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottoneProsegui"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/colore_secondario"
            android:textColor="@color/colore_base"
            android:text="Prosegui"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="20dp"/>


    </RelativeLayout>








</LinearLayout>