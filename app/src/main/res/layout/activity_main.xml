<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_colorato"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textViewBenvenuto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="-1dp"
        android:gravity="center"
        android:text="AppAste"
        android:textColor="@color/white"
        android:textSize="70sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/bordo_similbianco_main_login"
        android:orientation="vertical"
        >


       <TextView
            android:id="@+id/textViewCredenziali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Login"
            android:textSize="35sp"
            android:textStyle="bold"
           android:textColor="#66B2FF"
           android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bordi_blu_senza_riempimento"
            android:drawableLeft="@drawable/baseline_alternate_email_24"
            android:drawablePadding="15dp"
            android:hint="Indirizzo Email"
            android:padding="20dp"
            android:textColor="#CCFFFF"
            android:textColorHint="#CCFFFF" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bordi_blu_senza_riempimento"
            android:drawableLeft="@drawable/ic_lucchetto"
            android:drawablePadding="15dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColor="#CCFFFF"
            android:textColorHint="#CCFFFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottonelogin"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:backgroundTint="#22000000"
            android:text="Accedi"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>


    </LinearLayout>


    <TextView
        android:id="@+id/TextViewNonHaiUnAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Non hai un account?"
        android:textColor="#CCFFFF"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/TextViewRegistrati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Registrati"
        android:textColor="#CCFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BottoneAstaProva"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:background="@android:color/transparent"/>


</LinearLayout>










