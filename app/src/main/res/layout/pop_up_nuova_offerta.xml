<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".gui.PopUpNuovaOfferta"
    android:background="@drawable/bordo_non_stondato">

    <TextView
        android:id="@+id/textViewTitoloAsta"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:textSize="35sp"
        android:textStyle="bold"
        android:text="Fai un offerta"/>

    <TextView
        android:id="@+id/TextViewOffertaAsta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Prezzo attuale :"
        android:textColor="@color/colore_hint"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextViewPrezzoOffertaAsta"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="5dp"
        android:drawableEnd="@drawable/ic_euro"
        android:drawablePadding="5dp"
        android:textColor="@color/colore_secondario"
        android:text="200"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/TextViewNuovaOffertaAsta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Fai un\' offerta :"
        android:textColor="@color/colore_hint"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/EditTextPrezzoNuovaOffertaAsta"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/design_bio_personale"
        android:hint="â‚¬"
        android:drawableTint="@color/colore_hint"
        android:textColor="@color/colore_secondario"
        android:textSize="25sp"
        android:textStyle="bold"
        android:inputType="number"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottoneAnnullaPopUpAsta"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            app:strokeColor="#AAAAAA"
            app:strokeWidth="2dp"
            android:backgroundTint="@color/colore_base"
            android:text="Annulla"
            android:textColor="@color/colore_secondario"
            android:textSize="20sp"
            android:textStyle="bold" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottoneConfermaPopUpAsta"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/colore_secondario"
            android:text="Conferma"
            android:textColor="@color/colore_base"
            android:textSize="20sp"
            android:textStyle="bold"  />
    </LinearLayout>


</LinearLayout>
</FrameLayout>