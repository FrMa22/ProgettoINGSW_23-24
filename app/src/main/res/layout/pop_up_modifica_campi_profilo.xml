<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="440dp"
        android:layout_gravity="center"
        android:background="@drawable/bordo_non_stondato"
        tools:context=".gui.PopUpModificaCampiProfilo"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Modifica"
            android:textColor="@color/colore_secondario"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_text_modifica_nome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bordo_sotto_grigio"
            android:paddingStart="15dp"
            android:singleLine="true"
            android:paddingEnd="15dp"
            android:hint="nome"
            android:textColor="@color/colore_secondario"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/edit_text_modifica_cognome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bordo_sotto_grigio"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:hint="cognome"
            android:textColor="@color/colore_secondario"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/edit_text_modifica_sitoweb"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bordo_sotto_grigio"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:hint="sitoweb"
            android:textColor="@color/colore_secondario"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/edit_text_modifica_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bordo_sotto_grigio"
            android:minHeight="50dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:hint="bio"
            android:textColor="@color/colore_secondario"
            android:textSize="22sp" />
        <EditText
            android:id="@+id/edit_text_modifica_paese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bordo_sotto_grigio"
            android:minHeight="50dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:hint="paese"
            android:textColor="@color/colore_secondario"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottoneAnnullaModifica"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:background="@drawable/bordo_rettangolare_per_bottone"
                android:text="Annulla"
                android:textColor="@color/colore_secondario"
                android:textSize="22sp"
                android:textStyle="bold" />

            <View
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottoneConfermaModifica"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@drawable/bordo_rettangolare_per_bottone"
                android:text="Conferma"
                android:textColor="@color/colore_secondario"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>