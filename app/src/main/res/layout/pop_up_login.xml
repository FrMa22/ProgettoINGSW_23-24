<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bordo_non_stondato"
    android:backgroundTint="#8866B2FF"
    tools:context=".PopUpLogin">

    <TextView
        android:id="@+id/TextViewRichiestaAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Abbiamo rilevato due account collegati a questa email, con quale vuoi accedere?"
        android:gravity="center"
        android:textSize="30sp"
        android:textAlignment="center"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/TextViewRichiestaAccount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="1dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bottoneAcquirente"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:text="Acquirente"
            android:textColor="#AA00FF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="@drawable/bordo_rettangolare_per_bottone"
            android:layout_weight="1"/>

        <View
            android:layout_width="15dp"
            android:layout_height="match_parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bottoneVenditore"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:text="Venditore"
            android:textColor="#AA00FF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="@drawable/bordo_rettangolare_per_bottone"
            android:layout_weight="1"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>



