<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/bordo_non_stondato"
        tools:context=".gui.PopUpLogin">

        <TextView
            android:id="@+id/TextViewRichiestaAccount"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Abbiamo rilevato due account collegati a questa email, con quale vuoi accedere?"
            android:textAlignment="center"
            android:textColor="@color/colore_secondario"
            android:textSize="30dp"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewAcquirente"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Acquirente"
                android:background="@drawable/bordo_sopra_destra_curvi"
                android:textColor="@color/colore_secondario"
                android:textSize="24dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textViewVenditore"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Venditore"
                android:background="@drawable/bordo_sopra_sinistra_curvi"
                android:textColor="@color/colore_secondario"
                android:textSize="24dp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>
</FrameLayout>


