<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:background="@drawable/bordo_non_stondato"
        tools:context=".view.PopUpModificaCampiProfilo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_selezionare_asta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Selezionare tipologia Asta"
            android:textColor="@color/colore_secondario"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"/>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/text_view_selezionare_asta"
            android:layout_alignParentBottom="true"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottoneAstaAllInglese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:padding="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bordo_rettangolare_per_bottone"
                android:text="All'Inglese"
                android:textColor="@color/colore_secondario"
                android:textSize="22dp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottoneAstaAlRibasso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bordo_rettangolare_per_bottone"
                android:text="Al Ribasso"
                android:textColor="@color/colore_secondario"
                android:textSize="22dp"
                android:layout_margin="20dp" />

        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>