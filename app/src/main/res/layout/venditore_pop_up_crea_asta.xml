<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:background="@drawable/bordo_non_stondato"
        tools:context=".gui.PopUpModificaCampiProfilo"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Selezionare tipologia Asta"
            android:textColor="@color/colore_secondario"
            android:textSize="25dp"
            android:textStyle="bold" />



        <ImageButton
            android:id="@+id/bottoneInfoAste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_informazioni"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="Info sulle aste"
            android:textColor="@color/colore_secondario"
            android:textSize="22sp"
            android:textStyle="bold" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottoneAstaAllInglese"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bordo_rettangolare_per_bottone"
                android:text="Asta All'Inglese"
                android:textColor="@color/colore_secondario"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottoneAstaAlRibasso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bordo_rettangolare_per_bottone"
                android:text="Asta Al Ribasso"
                android:textColor="@color/colore_secondario"
                android:textSize="22dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp" />

    </LinearLayout>
</FrameLayout>