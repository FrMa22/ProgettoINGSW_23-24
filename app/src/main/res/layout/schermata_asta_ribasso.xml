<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayoutSchermataAstaRibasso"
    android:background="#FFFFFF"
    tools:context=".gui.acquirente.AcquirenteFragmentHome">  <!-- da cambiare-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewTitoloSchermataAstaRibasso"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Prodotto asta"
                android:background="@color/toolbar_color"/>
            <ImageButton
                android:id="@+id/bottoneBackSchermataAstaRibasso"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/baseline_arrow_back_ios_24"
                />

            <ImageView
                android:id="@+id/ImageViewSchermataAstaRibasso"
                android:layout_width="380dp"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@id/textViewTitoloSchermataAstaRibasso"
                android:layout_marginTop="15dp"
                android:src="@drawable/sfondoprova"/>

            <ImageButton
                android:id="@+id/SeguiSchermataAstaRibasso"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="345dp"
                android:layout_marginTop="100dp"
                android:layout_below="@id/textViewTitoloSchermataAstaRibasso"
                android:src="@drawable/baseline_favorite_border_24"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="Clicca per aggiungere ai preferiti."
                android:drawableTint="@android:color/transparent" />


            <TextView
                android:id="@+id/textViewNomeProdottoSchermataAstaRibasso"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="-1dp"
                android:gravity="center"
                android:textSize="23dp"
                android:textStyle="bold"
                android:text="Nome prodotto/servizio richiesto"
                android:layout_below="@id/ImageViewSchermataAstaRibasso"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                />

            <TextView
                android:id="@+id/textViewDescrizioneSchermataAstaRibasso"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Descrizione Prodotto"
                android:background="#DCDCDC"
                android:layout_below="@id/textViewNomeProdottoSchermataAstaRibasso"/>

            <TextView
                android:id="@+id/textViewPrezzoAttualeSchermataAstaRibasso"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="-1dp"
                android:textSize="23dp"
                android:textStyle="bold"
                android:text="  Prezzo attuale: 150â‚¬"
                android:layout_below="@id/textViewDescrizioneSchermataAstaRibasso"

                android:background="#FFFFFF"
                />

            <TextView
                android:id="@+id/textViewTempoDecrementoSchermataAstaRibasso"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="-1dp"
                android:textSize="23dp"
                android:textStyle="bold"
                android:text="  Prossimo decremento: 1:40:56"
                android:layout_below="@id/textViewPrezzoAttualeSchermataAstaRibasso"
                android:background="#FFFFFF"
                />

            <ImageButton
                android:id="@+id/bottoneOffertaSchermataAstaRibasso"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="300dp"
                android:background="@drawable/round_button"
                android:contentDescription="offerta nuova"
                android:layout_below="@id/textViewTempoDecrementoSchermataAstaRibasso"
                android:src="@drawable/baseline_add_24"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bottoneProfiloVenditoreSchermataAstaRibasso"
                android:layout_width="230dp"
                android:layout_height="48dp"
                android:backgroundTint="#FFFFFF"
                android:hint="bottone venditore"
                android:layout_below="@id/textViewTempoDecrementoSchermataAstaRibasso"
                />


            <TextView
                android:id="@+id/textViewVenditoreSchermataAstaRibasso"
                android:layout_width="230dp"
                android:layout_height="48dp"
                android:layout_marginBottom="-1dp"
                android:textSize="23dp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_profilo"
                android:text="Nome venditore"
                android:layout_below="@id/textViewTempoDecrementoSchermataAstaRibasso"
                android:background="#FFFFFF"
                android:gravity="center"
                />


            <TextView
                android:id="@+id/textViewProdottiSimiliSchermataAstaRibasso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prodotti simili"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_below="@id/bottoneProfiloVenditoreSchermataAstaRibasso"/>

            <TextView
                android:id="@+id/TextViewLineaSchermataAstaRibasso"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/black"
                android:paddingTop="5dp"
                android:layout_below="@id/textViewProdottiSimiliSchermataAstaRibasso"/>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TextViewLineaSchermataAstaRibasso">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="170dp"
                            android:contentDescription="Immagine"
                            android:src="@drawable/sfondoprova" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="-5dp"
                            android:text="Nome Prodotto"
                            android:textSize="20sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="-1dp"
                            android:text="Offerta attuale"
                            android:textSize="20sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="170dp"
                            android:contentDescription="Immagine"
                            android:src="@drawable/sfondoprova" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="-5dp"
                            android:text="Nome Prodotto"
                            android:textSize="20sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="-1dp"
                            android:text="Offerta attuale"
                            android:textSize="20sp" />


                    </LinearLayout>


                </LinearLayout>


            </HorizontalScrollView>
            <TextView
                android:id="@+id/TextViewLineaFinaleSchermataAstaRibasso"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="240dp"
                android:background="@color/black"
                android:paddingTop="5dp"
                android:layout_below="@id/textViewProdottiSimiliSchermataAstaRibasso"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>