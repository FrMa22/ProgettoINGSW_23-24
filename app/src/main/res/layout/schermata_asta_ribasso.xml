<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayoutSchermataAstaRibasso"
    android:orientation="vertical"
    android:background="@color/colore_base"
    tools:context=".view.SchermataAstaRibasso">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_schermata_asta_ribasso"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/design_toolbar">
        <TextView
            android:id="@+id/textViewTitoloSchermataAstaRibasso"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="35dp"
            android:textStyle="bold"
            android:text="Asta Ribasso"
            android:textColor="@color/colore_item_asta_ribasso"/>
        <ImageButton
            android:id="@+id/bottoneBackSchermataAstaRibasso"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_gravity="start"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="Premi per tornare indietro."
            android:src="@drawable/baseline_arrow_back_ios_24" />
        <ImageButton
            android:id="@+id/aggiuntiPreferitiButtonAstaRibasso"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="Clicca per aggiungere ai preferiti."
            android:drawableTint="@android:color/transparent"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_cuore_vuoto" />
    </androidx.appcompat.widget.Toolbar>

    <ProgressBar
        android:id="@+id/progress_bar_schermata_asta_ribasso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:indeterminate="true"
        android:elevation="10dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_schermata_asta_ribasso">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ImageViewSchermataAstaRibasso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/design_bio_personale"
                android:scaleType="fitXY"/>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/textViewNomeProdottoSchermataAstaRibasso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-1dp"
        android:padding="10dp"
        android:paddingBottom="5dp"
        android:background="@drawable/design_schermata_asta_ribasso_nome"
        android:gravity="center"
        android:textColor="@color/colore_secondario"
        android:text="nome asta"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="30dp"
        />

    <View
        android:id="@+id/trattino_asta_ribasso"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:elevation="2dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@color/colore_item_asta_ribasso"
        android:layout_below="@id/textViewNomeProdottoSchermataAstaRibasso"
        />

    <TextView
        android:id="@+id/textViewDescrizioneSchermataAstaRibasso"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="-1dp"
        android:background="@drawable/design_schermata_asta_ribasso"
        android:gravity="center"
        android:hint="Descrizione Prodotto Assente"
        android:textColor="@color/colore_secondario"
        android:textColorHint="@color/colore_hint"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="20dp"
        android:layout_below="@id/trattino_asta_ribasso"/>
</RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:text="Prossimo decremento:"
                        android:textColor="@color/colore_secondario"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/textViewProssimoDecrementoAstaRibasso"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/colore_secondario"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="end"
                        android:text="Offerta attuale:"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/colore_secondario" />
                    <TextView
                        android:id="@+id/textViewOffertaAttualeSchermataAstaRibasso"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textColor="@color/colore_secondario"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        app:drawableEndCompat="@drawable/ic_euro"
                        android:drawablePadding="5dp"
                        />
                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bottoneOffertaSchermataAstaRibasso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colore_base"
                android:contentDescription="offerta nuova"
                android:text="Fai un offerta"
                android:textColor="@color/colore_secondario"
                android:textSize="30dp"
                android:textStyle="bold"
                app:cornerRadius="30dp"
                app:strokeColor="@color/colore_item_asta_ribasso"
                app:strokeWidth="2dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                >
            <TextView
                android:id="@+id/textViewVenditoreSchermataAstaRibasso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/bottone_info_schermata_asta_ribasso"
                android:gravity="start|center_vertical"
                android:drawableLeft="@drawable/ic_profilo"
                android:text="Email venditore"
                android:textColor="@color/colore_secondario"
                android:textSize="20dp"
                android:textStyle="bold"
                />
                <ImageButton
                    android:id="@+id/bottone_info_schermata_asta_ribasso"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@android:color/transparent"
                    android:contentDescription="Premi per informazioni"
                    android:src="@drawable/ic_info"
                    tools:ignore="TouchTargetSizeCheck" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>