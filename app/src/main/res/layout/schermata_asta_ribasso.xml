<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayoutSchermataAstaRibasso"
    android:orientation="vertical"
    android:background="@color/colore_base"
    tools:context=".gui.SchermataAstaRibasso">  <!-- da cambiare-->

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/design_toolbar">
        <TextView
            android:id="@+id/textViewTitoloSchermataAstaRibasso"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:text="Asta Ribasso"
            android:textColor="@color/colore_secondario"/>
        <ImageButton
            android:id="@+id/bottoneBackSchermataAstaRibasso"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_gravity="start"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="Premi per tornare indietro."
            android:src="@drawable/baseline_arrow_back_ios_24" />
        <ImageButton
            android:id="@+id/aggiuntiPreferitiButtonAstaRibasso"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="Clicca per aggiungere ai preferiti."
            android:drawableTint="@android:color/transparent"
            android:src="@drawable/baseline_favorite_border_24" />
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewNomeProdottoSchermataAstaRibasso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="-1dp"
                android:background="@drawable/design_bio_personale"
                android:gravity="center"
                android:text="Nome asta"
                android:textSize="25sp"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/ImageViewSchermataAstaRibasso"
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/design_bio_personale"
                android:scaleType="fitXY"/>





            <TextView
                android:id="@+id/textViewDescrizioneSchermataAstaRibasso"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/design_bio_personale"
                android:gravity="center"
                android:text="Descrizione Prodotto"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="start"
                        android:text="Prossimo decremento:"
                        android:textColor="@color/colore_secondario"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/textViewProssimoDecrementoAstaRibasso"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/colore_secondario"
                        android:text="10:10:00"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colore_secondario"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="end"
                        android:text="Offerta attuale:"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/colore_secondario" />
                    <TextView
                        android:id="@+id/textViewOffertaAttualeSchermataAstaRibasso"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="150.00"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textColor="@color/colore_secondario"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        app:drawableEndCompat="@drawable/ic_euro"
                        android:drawablePadding="5dp"
                        />
                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bottoneOffertaSchermataAstaRibasso"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="offerta nuova"
                android:textColor="@color/colore_secondario"
                android:textStyle="bold"
                android:textSize="30dp"
                app:strokeColor="#AAAAAA"
                app:strokeWidth="2dp"
                android:backgroundTint="@color/colore_base"
                android:text="Fai un offerta"
                />


            <TextView
                android:id="@+id/textViewVenditoreSchermataAstaRibasso"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="-1dp"
                android:drawableLeft="@drawable/ic_profilo"
                android:gravity="center"
                android:text="Nome venditore"
                android:textColor="@color/colore_secondario"
                android:textSize="25sp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/textViewProdottiSimiliSchermataAstaRibasso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prodotti simili"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/TextViewLineaSchermataAstaRibasso"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/black"
                android:paddingTop="5dp"/>


