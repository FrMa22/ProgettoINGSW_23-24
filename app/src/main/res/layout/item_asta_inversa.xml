<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_asta_inversa"
    android:layout_width="175dp"
    android:layout_height="240dp"
    android:layout_margin="15dp">



    <RelativeLayout
        android:id="@+id/relative_layout_immagine"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:elevation="1dp"
        >

        <ImageView
            android:id="@+id/image_view_item_asta_inversa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/relative_layout_immagine">
    <TextView
        android:id="@+id/textView_nome_item_asta_inversa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:maxLines="2"
        android:gravity="center"
        android:text="Nome asta"
        android:textColor="@color/colore_secondario"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView_descrizione_item_asta_inversa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_nome_item_asta_inversa"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="top|center"
        android:lines="2"
        android:text="descrizione asta "
        android:textColor="@color/colore_secondario"
        android:textSize="14dp"
        tools:ignore="TextSizeCheck"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/textView_prezzo_item_asta_inversa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="100â‚¬"
        android:textColor="@color/colore_item_asta_inversa"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_below="@id/textView_nome_item_asta_inversa"/>

        <TextView
            android:id="@+id/scadenza_asta_inversa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scadenza:"
            android:fontFamily="sans-serif-thin"
            android:textSize="14dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView_prezzo_item_asta_inversa"
            />
        <TextView
            android:id="@+id/textView_data_scadenza_item_asta_inversa"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="01:00"
            android:textColor="@color/colore_secondario"
            android:textSize="16dp"
            android:layout_below="@id/scadenza_asta_inversa"/>
    </RelativeLayout>

</RelativeLayout>