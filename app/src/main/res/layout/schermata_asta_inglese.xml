<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayoutSchermataAstaInglese"
    android:background="#FFFFFF"
    tools:context=".HomeUtente">  <!-- da cambiare-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:id="@+id/textViewTitoloSchermataAstaInglese"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="-1dp"
        android:gravity="center"
        android:textSize="35dp"
        android:textStyle="bold"
        android:text="Prodotto asta"
        android:background="@color/toolbar_color"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/bottoneBackSchermataAstaInglese"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:backgroundTint="#99E8FF"
        android:hint="@string/navigation_drawer_close"
        android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
        />

    <ImageView
        android:id="@+id/ImageViewSchermataAstaInglese"
        android:layout_width="380dp"
        android:layout_height="150dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/textViewTitoloSchermataAstaInglese"
        android:layout_marginTop="15dp"
        android:src="@drawable/sfondoprova"/>

        <ImageButton
            android:id="@+id/SeguiSchermataAstaInglese"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="345dp"
            android:layout_marginTop="100dp"
            android:layout_below="@id/textViewTitoloSchermataAstaInglese"
            android:src="@drawable/baseline_favorite_border_24"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="Clicca per aggiungere ai preferiti."
            android:drawableTint="@android:color/transparent" />


        <TextView
        android:id="@+id/textViewNomeProdottoSchermataAstaInglese"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="-1dp"
        android:gravity="center"
        android:textSize="23dp"
        android:textStyle="bold"
        android:text="Nome prodotto/servizio richiesto"
        android:layout_below="@id/ImageViewSchermataAstaInglese"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        />

    <TextView
        android:id="@+id/textViewDescrizioneSchermataAstaInglese"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Descrizione Prodotto"
        android:background="#DCDCDC"
        android:layout_below="@id/textViewNomeProdottoSchermataAstaInglese"/>

    <TextView
        android:id="@+id/textViewOffertaAttualeSchermataAstaInglese"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="-1dp"
        android:textSize="23dp"
        android:textStyle="bold"
        android:text="  Offerta attuale: 150â‚¬"
        android:layout_below="@id/textViewDescrizioneSchermataAstaInglese"

        android:background="#FFFFFF"
        />

    <TextView
        android:id="@+id/textViewTempoRimanenteSchermataAstaInglese"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="-1dp"
        android:textSize="23dp"
        android:textStyle="bold"
        android:text="  Tempo rimanente: 12:45:36"
        android:layout_below="@id/textViewOffertaAttualeSchermataAstaInglese"
        android:background="#FFFFFF"
        />

        <ImageButton
            android:id="@+id/bottoneOffertaSchermataAstaInglese"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="300dp"
            android:background="@drawable/round_button"
            android:contentDescription="offerta nuova"
            android:layout_below="@id/textViewTempoRimanenteSchermataAstaInglese"
            android:src="@drawable/baseline_add_24"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottoneProfiloVenditoreSchermataAstaInglese"
            android:layout_width="230dp"
            android:layout_height="48dp"
            android:backgroundTint="#FFFFFF"
            android:hint="bottone venditore"
            android:layout_below="@id/textViewTempoRimanenteSchermataAstaInglese"
            />


        <TextView
            android:id="@+id/textViewVenditoreSchermataAstaInglese"
            android:layout_width="230dp"
            android:layout_height="48dp"
            android:layout_marginBottom="-1dp"
            android:textSize="23dp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_profilo"
            android:text="Nome venditore"
            android:layout_below="@id/textViewTempoRimanenteSchermataAstaInglese"
            android:background="#FFFFFF"
            android:gravity="center"
            />


    <TextView
        android:id="@+id/textViewProdottiSimiliSchermataAstaInglese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prodotti simili"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@id/bottoneProfiloVenditoreSchermataAstaInglese"/>

    <TextView
        android:id="@+id/TextViewLineaSchermataAstaInglese"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:paddingTop="5dp"
        android:layout_below="@id/textViewProdottiSimiliSchermataAstaInglese"/>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextViewLineaSchermataAstaInglese">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="170dp"
                    android:contentDescription="Immagine"
                    android:src="@drawable/sfondoprova" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-5dp"
                    android:text="Nome Prodotto"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-1dp"
                    android:text="Offerta attuale"
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="170dp"
                    android:contentDescription="Immagine"
                    android:src="@drawable/sfondoprova" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-5dp"
                    android:text="Nome Prodotto"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-1dp"
                    android:text="Offerta attuale"
                    android:textSize="20sp" />


            </LinearLayout>


        </LinearLayout>


    </HorizontalScrollView>
        <TextView
            android:id="@+id/TextViewLineaFinaleSchermataAstaInglese"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="240dp"
            android:background="@color/black"
            android:paddingTop="5dp"
            android:layout_below="@id/textViewProdottiSimiliSchermataAstaInglese"/>

    </RelativeLayout>

    </ScrollView>

</RelativeLayout>