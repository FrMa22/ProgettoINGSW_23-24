<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bordo_non_stondato"
    tools:context=".gui.PopUpRegistrazioneSocial"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextNomeSocial"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_top_corners_rounded_grigi"
        android:drawablePadding="15dp"
        android:hint="Nome Social"
        android:padding="20dp"
        android:textColor="@color/colore_secondario"
        android:textColorHint="@color/colore_hint"
        android:singleLine="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colore_trattino_separatore"
        android:layout_gravity="center"
        android:layout_marginTop="-2dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        />
    <EditText
        android:id="@+id/editTextNomeUtenteSocial"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_bottom_corners_rounded_grigi"
        android:drawablePadding="15dp"
        android:hint="Nome Utente"
        android:padding="20dp"
        android:textColor="@color/colore_secondario"
        android:textColorHint="@color/colore_hint"
        android:singleLine="true"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottoneChiudiRegistrazioneSocial"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/colore_secondario"
            android:text="Chiudi"
            android:textColor="@color/colore_base"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottoneConfermaRegistrazioneSocial"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/colore_secondario"
            android:text="Aggiungi"
            android:textColor="@color/colore_base"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>


</LinearLayout>