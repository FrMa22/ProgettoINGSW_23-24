<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="500dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".PopUpRicercaCategorie"
    android:background="#C0C0C0">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hai selezionato queste categorie, confermi?"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="7dp"
            android:textColor="@color/black"/>
    
    <GridView
        android:id="@+id/gridview"
        android:layout_width="290dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:numColumns="2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="bottom">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_annulla"
            android:text="Annulla"
            android:textSize="18sp"
            android:textStyle="bold"
            android:contentDescription="Premi per annullare e tornare indietro"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_cerca"
        android:text="Cerca"
        android:textSize="18sp"
        android:textStyle="bold"
        android:contentDescription="Premi per annullare e tornare indietro"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentEnd="true"/>

        </RelativeLayout>




</LinearLayout>