<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bordo_non_stondato"
    tools:context=".view.PopUpNotifiche">


    <TextView
        android:id="@+id/textview_titolo_notifica_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:minHeight="40dp"
        android:maxHeight="60dp"
        android:background="@drawable/edit_text_top_corners_rounded_grigi"
        android:gravity="center"
        android:padding="10dp"
        android:text="*Titolo notifica"
        android:textColor="@color/colore_secondario"
        android:textSize="30dp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:autoSizeTextType="uniform"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colore_trattino_separatore"
        android:layout_below="@id/textview_titolo_notifica_popup"
        android:layout_gravity="center"
        android:layout_marginTop="-2dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        />
        <TextView
            android:id="@+id/textview_commento_notifica_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bottom_corners_rounded_grigi"
            android:layout_below="@id/textview_titolo_notifica_popup"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:minHeight="100dp"
            android:maxHeight="180dp"
            android:padding="10dp"
            android:text="descrizione"
            android:textSize="24dp"
            android:textColor="@color/colore_secondario" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/button_chiudi_popup_notifica"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:backgroundTint="@color/colore_secondario"
                android:text="Chiudi"
                android:textColor="@color/colore_base"
                android:textSize="16dp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/button_cancella_notifica_popup_notifica"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/colore_secondario"
                android:text="Cancella notifica"
                android:textColor="@color/colore_base"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />


        </RelativeLayout>

</RelativeLayout>



