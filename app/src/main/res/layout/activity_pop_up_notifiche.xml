<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bordo_non_stondato"
    tools:context=".view.PopUpNotifiche">

    <LinearLayout
        android:id="@+id/linear_layout_notifiche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >

    <TextView
        android:id="@+id/textview_titolo_notifica_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:minHeight="40dp"
        android:background="@drawable/edit_text_top_corners_rounded_grigi"
        android:gravity="center"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="*Titolo notificassssjncdzokwcdw"
        android:textColor="@color/colore_secondario"
        android:textSize="24dp"
        android:textStyle="bold"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colore_trattino_separatore"
        android:layout_below="@id/textview_titolo_notifica_popup"
        android:layout_gravity="center"
        android:layout_marginTop="-2dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        />
        <TextView
            android:id="@+id/textview_commento_notifica_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bottom_corners_rounded_grigi"
            android:layout_below="@id/textview_titolo_notifica_popup"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center|top"
            android:minHeight="100dp"
            android:padding="10dp"
            android:text="descrizione"
            android:textSize="20dp"
            android:textColor="@color/colore_secondario" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/linear_layout_notifiche"
        android:layout_margin="20dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/button_chiudi_popup_notifica"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:backgroundTint="@color/colore_secondario"
            android:text="Chiudi"
            android:textColor="@color/colore_base"
            android:textSize="20dp"
            android:padding="5dp"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/button_cancella_notifica_popup_notifica"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/colore_secondario"
            android:text="Elimina"
            android:textColor="@color/colore_base"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="5dp"
            tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />


    </RelativeLayout>

</RelativeLayout>



